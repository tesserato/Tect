digraph {
    "configuration" [
        label = "configuration\nHolds the settings";
        color="green";
    ];

    "pathToConfiguration" [
        label = "path To Configuration\nPath to a configuration file";
        color="green";
    ];

    "initialCommand" [
        label = "initial Command";
        color="green";
    ];

    "initialCommandMalformedError" [
        color="red";
        label="initial Command Malformed Error";
    ];

    "readConfiguration" [
        label = "read Configuration\nReads the configuration from file";
        color="blue";
    ];

    "processInitialCommand" [
        label="process Initial Command\nMatches the initial command to actions";
        color="blue";
    ];

    "fileNotFoundError" [
        label="file Not Found Error";
        color="red";
    ];

    "configurationMalformedError" [
        label="configuration Malformed Error";
        color="red";
    ];

    initialCommand -> processInitialCommand;
    processInitialCommand -> configuration;
    processInitialCommand -> pathToConfiguration;
    processInitialCommand -> initialCommandMalformedError;

    pathToConfiguration -> readConfiguration;
    readConfiguration -> configuration;
    readConfiguration -> fileNotFoundError;
    readConfiguration -> configurationMalformedError;
    
}