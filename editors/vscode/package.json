{
    "name": "tect-vscode",
    "displayName": "Tect Architecture",
    "version": "0.1.0",
    "publisher": "tect-lang",
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:tect"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "tect",
                "extensions": [
                    ".tect"
                ]
            }
        ],
        "grammars": [
            {
                "language": "tect",
                "scopeName": "source.tect",
                "path": "./syntaxes/tect.tmLanguage.json"
            }
        ],
        "semanticTokenTypes": [
            {
                "id": "keyword"
            },
            {
                "id": "type"
            },
            {
                "id": "function"
            },
            {
                "id": "variable"
            },
            {
                "id": "enum"
            }
        ],
        "semanticTokenScopes": [
            {
                "language": "tect",
                "scopes": {
                    "keyword": [
                        "keyword.control.tect"
                    ],
                    "type": [
                        "entity.name.type.tect",
                        "support.type.tect"
                    ],
                    "function": [
                        "entity.name.function.tect",
                        "support.function.tect"
                    ],
                    "variable": [
                        "variable.other.readwrite.tect",
                        "variable.parameter.tect"
                    ],
                    "enum": [
                        "entity.name.error.tect",
                        "markup.bold",
                        "constant.language.tect"
                    ]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.75.0",
        "typescript": "^4.9.4"
    }
}