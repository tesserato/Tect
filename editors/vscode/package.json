{
    "name": "tect",
    "displayName": "Tect Architecture Language",
    "description": "Architectural Specification Language & Visualizer",
    "version": "0.0.1",
    "publisher": "tect-lang",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages",
        "Visualization"
    ],
    "activationEvents": [
        "onLanguage:tect"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "tect",
                "aliases": [
                    "Tect",
                    "tect"
                ],
                "extensions": [
                    ".tect"
                ]
            }
        ],
        "grammars": [
            {
                "language": "tect",
                "scopeName": "source.tect",
                "path": "./syntaxes/tect.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "tect.openPreview",
                "title": "Tect: Open Architecture Preview",
                "icon": "$(graph)",
                "category": "Tect"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "tect.openPreview",
                    "group": "navigation",
                    "when": "resourceLangId == tect"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.75.0",
        "typescript": "^4.9.5"
    }
}