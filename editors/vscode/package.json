{
    "name": "tect-vscode",
    "displayName": "Tect Language Support",
    "description": "Architectural modeling and flow analysis for the Tect DSL.",
    "version": "0.1.0",
    "publisher": "tect-lang",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:tect"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "tect",
                "aliases": [
                    "Tect",
                    "tect"
                ],
                "extensions": [
                    ".tect"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tect",
                "scopeName": "source.tect",
                "path": "./syntaxes/tect.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Tect",
            "properties": {
                "tect.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the Tect language server."
                }
            }
        },
        "semanticTokenTypes": [
            {
                "id": "tectGroup",
                "description": "Architectural group identifiers."
            }
        ],
        "semanticTokenScopes": [
            {
                "language": "tect",
                "scopes": {
                    "tectGroup": [
                        "entity.name.section.tect"
                    ]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.75.0",
        "typescript": "^4.9.5"
    }
}