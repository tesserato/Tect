{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Tect",
    "patterns": [
        {
            "name": "comment.line.number-sign.tect",
            "begin": "#",
            "end": "$"
        },
        {
            "name": "keyword.control.tect",
            "match": "\\b(constant|variable|error|group)\\b"
        },
        {
            "comment": "Function definition with group prefix support",
            "match": "\\b(function)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
            "captures": {
                "1": {
                    "name": "keyword.declaration.function.tect"
                },
                "2": {
                    "name": "entity.name.function.tect"
                }
            }
        },
        {
            "comment": "Generic Entity/Type highlighting (PascalCase)",
            "name": "entity.name.type.tect",
            "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
            "comment": "Flow steps (identifiers on their own, usually PascalCase)",
            "name": "variable.other.member.tect",
            "match": "\\b[A-Z][a-zA-Z0-9_]*\\b(?=\\s*(?:#|$))"
        },
        {
            "name": "keyword.operator.tect",
            "match": "(>|\\||,)"
        },
        {
            "name": "punctuation.section.brackets.tect",
            "match": "(\\[|\\])"
        },
        {
            "name": "punctuation.section.parameters.tect",
            "match": "(\\(|\\))"
        }
    ],
    "scopeName": "source.tect"
}